<script>
        
       var status = '<%- JSON.stringify(status) %>';
       if (JSON.parse(status) == "verified"){
            if (confirm("Do you want to login?")) {
                window.location.href = "http://localhost:3000/";
            }
        }

    </script>
<body>
    <h1><%= email%></h1>
    <form action="" method="post">
        <input required type="password" name="password" placeholder="Password" id="password" /><br />
        <input type="password" name="confirm-password" placeholder="Confirm Password" id="confirm-password" /><br />
        <input type="submit" value="submit" />
    </form>
</body>
</html>